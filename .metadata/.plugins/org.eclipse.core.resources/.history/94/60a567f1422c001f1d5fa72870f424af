package kh.java.func;
//1. import
import java.util.Scanner;
public class ScanTest {
	
	public void scanTest1() {  //덩어리로 외우면 안되고 시스템을 알아야함. 
		Scanner sc = new Scanner(System.in);
		/*
		System.out.print("정수를 입력하세요 : ");
		//sc.nestInt() : 사용자가 콘솔에 숫자를 입력하기를 기다리다가
		//					입력하면 입력받은 숫자를 정수타입으로 가져옴
		int num = sc.nextInt();
		System.out.println("입력받은 숫자는 : "+num);
		System.out.print("실수를 입력 하세요 : ");
		//sc.nextDouble() : 사용자가 콘솔에 숫자를 입력하기를 기다리다가
		//					입력하면 입력받은 숫자를 실수타입으로 가져옴
		double dNum = sc.nextDouble();
		System.out.println("입력받은 실수는 : "+dNum);
		*/
		
		System.out.print("문자열을 입력하세요 : ");
		//sc.next() : 사용자가 콘솔에 문자열을 입력하기를 기다리다가
		//				입력하면 입력받은 문자열을 문자열타입으로 가져옴(띄어쓰기 불가능)
		//sc.nextLine() : 사용자가 콘솔에 문자열을 입력하기를 기다리다가
		//				입력하면 입력받은 문자열을 문자열타입으로 가져옴(띄어쓰기 가능)
		String str1 = sc.nextLine();
		System.out.println("입력받은 문자열은 : "+str1);
	}
	public void scanTest2() {
		Scanner sc = new Scanner(System.in);
		//이름 , 나이, 주소 
		System.out.print("이름을 입력하세요 : ");
		String name = sc.next();
		System.out.println("이름은 : "+name);
		
		System.out.print("나이를 입력하세요 : ");  
		int age = sc.nextInt();
		System.out.println("나이는 : "+age);
		
		//sc.nextLine();   //버퍼로 인해서 비어있는 문자가 들어감. 엔터로 가져가라~ 
		System.out.print("주소를 입력하세요 : ");   
		String address = sc.nextLine();
		System.out.println("주소는 : "+address);
	}
	public void scanTest3() { //이런 경우 두번 입력이 됨
		Scanner sc = new Scanner(System.in);
		System.out.print("주소를 입력하세요 : ");  
		//sc.nextLine();     //두번 입력이 됨 : 버퍼라는 공간을 생각해야함. 
		String address = sc.nextLine();
		System.out.println("주소는 : "+address);
		
		System.out.print("주소를 입력하세요 2 : ");
		String address2 = sc.nextLine();
		System.out.println("주소는 : "+address2);
	}
	public void scanTest4() {
		Scanner sc = new Scanner(System.in);
		//Scanner에도 문자타입을 직접 입력받는 경우는 없음
		//문자 -> 문자열을받고 -> 문자열을 문자로 추출 
		System.out.print("문자를 입력하세요 : ");
		String str = sc.next();
		char ch = str.charAt(3);
		System.out.println("ch : "+ch);
		
		System.out.print("문자를 입력하세요 : ");
		char ch2 = sc.next().charAt(0);
		System.out.println("ch : "+ch2);
	}
	public void scanTest5() {
		Scanner sc = new Scanner(System.in);
		
		System.out.print("이름 : ");
		String name = sc.next();
		System.out.println("이름 : "+name);
		
		System.out.print("나이 : ");
		int age = sc.nextInt();
		System.out.println("나이 : "+age);
		
		sc.nextLine();
		System.out.print("주소 : ");
		String address = sc.nextLine();
		System.out.println("주소 : "+address);
		
		System.out.print("키 : ");
		double height = sc.nextDouble();
		System.out.println("키 : "+(int)height);  //int intHeight = (int)height  출력 : intheight 도 가능
		
		System.out.print("몸무게 : ");
		double weight = sc.nextDouble();
		System.out.printf("몸무게 : %.1f\n",weight);  //소수점 조절은 printf로 가능 
		
		System.out.print("성별 : " );
		char gender = sc.next().charAt(0);
		System.out.println("성별 : "+gender);
	}
	public void scanTest6() {
		Scanner sc = new Scanner(System.in);
		
		System.out.print("국어 점수 입력 : ");
		int korean = sc.nextInt();
		System.out.print("수학 점수 입력 : ");
		int math = sc.nextInt();
		System.out.print("영어 점수 입력 : ");
		int english = sc.nextInt();
		
		int sum = korean+math+english;
		double total = sum/3.0;
		//double total = (double)sum/3;    //double total = sum/(double)3;
		System.out.printf("당신 성적의 총 합은 %d점이고 %.2f평균은 입니다",sum, total);
		
	}
}